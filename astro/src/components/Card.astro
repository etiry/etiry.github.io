---
import { Image } from 'astro:assets';
import Tags from './Tags.astro';

const { url, img, alt, description, title, tags, demo } = Astro.props;
---

<section class="w-full p-4 md:w-1/2 lg:w-1/3 min-h-full flex">
	<article
		class="rounded-xl bg-white p-3 shadow-lg duration-100 hover:scale-105 hover:transform hover:shadow-xl grow text-sky-950"
	>
		<div class="relative flex items-end overflow-hidden rounded-xl">
			<Image
				src={img}
				alt={alt}
				format="png"
				width={400}
				height={400}
				loading="eager"
				/>
		</div>
		<div class="mt-1 p-2">
			<h3 class="mb-2 text-xl lg:text-2xl">{title}</h3>
			<a href={url} aria-label="Github link" target="_blank" class="hover:text-med-blue underline decoration-solid decoration-dark-yellow decoration-2 underline-offset-2">Github</a> | 
			<a href={demo} aria-label="Live demo link" target="_blank" class="hover:text-med-blue underline decoration-solid decoration-dark-yellow decoration-2 underline-offset-2">Live Demo</a>
			<p class="text-s">{description}</p>
			<Tags tags={tags} />
		</div>
	</article>
</section>