---
import profile from '../assets/img/profile.jpg';
import { Image } from 'astro:assets';
import Button from './Button.astro';
---

<section
	class="flex h-screen flex-col-reverse items-center justify-center text-center lg:flex-row"
>
	<div class="mb-10 flex flex-col items-center lg:mb-0 lg:w-1/2">
		<div>
			<h1 class="mb-10 text-3xl text-sky-950 lg:text-5xl">
				Hi! My name is <span class="text-dark-yellow">Emily Tiry</span> and I'm a software developer based in Durham, North Carolina.
			</h1>
		</div>
		<div class="mb-10">
			<Button><a href="#about">Learn more</a></Button>
		</div>
	</div>
	<div class="mb-10 flex w-1/2 items-center justify-center">
		<Image
			src={profile}
			alt="Emily Tiry"
			format="jpg"
			width={300}
			height={300}
			loading="eager"
      class="rounded-full"
		/>
	</div>
</section>